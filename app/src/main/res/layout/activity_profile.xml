<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".profile">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:text="Your Profile"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textSize="35sp"

        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layoutDirection="ltr"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvdog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:text="TextView" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layoutDirection="ltr"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"

            android:textSize="15sp"
            android:text="Your Full Name: " />

        <EditText
            android:id="@+id/etname"
            android:layout_width="0dp"
            android:textColorHint="#000000"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="15sp"
            android:textStyle="bold"
            android:inputType="textPersonName" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layoutDirection="ltr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#000000"

            android:text="Your Phone Number: " />

        <EditText
            android:id="@+id/etphone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="15sp"
            android:inputType="phone"
            android:textColorHint="#000000"
            android:textStyle="bold"
             />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layoutDirection="ltr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textSize="15sp"
            android:textColor="#000000"

            android:textStyle="bold"
            android:text="Your Email Address: " />

        <EditText
            android:id="@+id/etmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textStyle="bold"
            android:textColorHint="#000000"
            android:textSize="15sp"

            android:inputType="textEmailAddress" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layoutDirection="ltr"

        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cBconnectview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Stay Connected" />

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="changestay"
            android:text="change stay connected" />
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <Button
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@drawable/btn1bg"
        android:onClick="Update"
        android:layout_gravity="center"
        android:text="Change personal information"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/button5"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:textStyle="bold"
        android:background="@drawable/btn2bg"
        android:layout_gravity="center"
        android:onClick="Details"
        android:layout_weight="1.5"
        android:text="To change your details Ad" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:layout_width="250dp"
        android:onClick="toMehmezh"
        android:layout_height="0dp"
        android:background="@drawable/btn3bg"
        android:textStyle="bold"
        android:layout_weight="1.5"
        android:layout_gravity="center"

        android:text="To the list of proposed dogs for adoption" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/button7"
        android:layout_width="250dp"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:textStyle="bold"
        android:background="@drawable/btn4bg"
        android:layout_weight="1.5"
        android:onClick="tomoser"
        android:text="Raise another dog ad for adoption" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>