<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:orientation="vertical"
    tools:context=".mehmezh_dog">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="#000000"
        android:textSize="25sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_weight="1"
        android:text="To see all details click on the ad" />

    <LinearLayout
        android:layoutDirection="ltr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBreed3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_weight="8"
            android:text="To select the dog breed, click the breed button" />

        <Button
            android:id="@+id/breed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/btnbackgrounds"
            android:onClick="FindBreed2"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="breed" />


    </LinearLayout>

    <LinearLayout
        android:layoutDirection="ltr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TameSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Tame:"
            android:textColor="#000000"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rgtame"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/isTameSearch"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:text="Yes"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/notTameSearch"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="#000000"
                android:layout_weight="0.5"
                android:text="No" />
        </RadioGroup>


    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25" />
    <LinearLayout
        android:layoutDirection="ltr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/vaccinatedSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000000"
            android:text="vaccinated" />

        <RadioGroup
            android:id="@+id/rgvaccinated"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#000000"

            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/isVaccinatedSearch"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="#000000"
                android:layout_weight="0.5"
                android:text="Yes" />


            <RadioButton
                android:id="@+id/notVaccinatedSearch"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="#000000"
                android:layout_weight="0.5"
                android:text="No" />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layoutDirection="ltr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000000"
            android:text="Size:" />

        <Spinner
            android:id="@+id/size_spinner"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layoutDirection="ltr"
        android:orientation="horizontal">
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvclear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />



        <TextView
            android:id="@+id/tvsearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="#000000"

        android:layout_weight="8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layoutDirection="ltr"

        android:orientation="horizontal">

        <Button
            android:id="@+id/button8"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="back"
            android:background="@drawable/btnbackgrounds"
            android:text="Back" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3" />


    </LinearLayout>
</LinearLayout>