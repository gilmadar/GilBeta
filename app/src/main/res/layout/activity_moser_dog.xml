<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:orientation="vertical"
    tools:context=".moser_dog">

    <EditText
        android:id="@+id/Dog"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:gravity="center"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="The Name Of The Dog:"
         />


    <EditText
        android:id="@+id/age"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ems="10"
        android:gravity="center"
        android:hint="Age:"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textStyle="bold" />

    <LinearLayout
        android:layoutDirection="ltr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tame"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Tame?"
            android:textColor="#000000"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rbYes"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="#000000"
                android:layout_weight="0.5"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/rbNo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="#000000"
                android:layout_weight="0.5"
                android:text="No" />
        </RadioGroup>


    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25" />
    <LinearLayout
        android:layoutDirection="ltr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/vaccinated"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000000"
            android:text="vaccinated?" />

        <RadioGroup
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#000000"

            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rbYes2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="#000000"
                android:layout_weight="0.5"
                android:text="Yes" />


            <RadioButton
                android:id="@+id/rbNo2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="#000000"
                android:layout_weight="0.5"
                android:text="No" />
        </RadioGroup>
    </LinearLayout>


    <LinearLayout
        android:layoutDirection="ltr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000000"
            android:text="Size?" />

        <Spinner
            android:id="@+id/size_spinner"

            android:layout_width="0dp"
            android:layout_weight="4"

            android:layout_height="wrap_content"

            />
    </LinearLayout>


    <EditText
        android:id="@+id/etCity"
        android:hint="Which city the dog is in:"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:ems="10"
        android:textStyle="bold"
        android:inputType="textPersonName" />


    <LinearLayout
        android:layoutDirection="ltr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBreed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_weight="8"
            android:text="To select the dog breed, click the breed button" />

        <Button
            android:id="@+id/breed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/btnbackgrounds"
            android:onClick="FindBreed"
            android:textStyle="bold"
            android:text="breed" />

    </LinearLayout>

    <LinearLayout
        android:layoutDirection="ltr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/myImage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5" />

            <Button
                android:id="@+id/btn_choose"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/btnbackgrounds"
                android:textStyle="bold"
                android:text="Choose image" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5" />

        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/Description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:ems="10"
        android:hint="More details about the dog:"
        android:textStyle="bold"
        android:inputType="textPersonName" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@drawable/btnbackgrounds"
            android:onClick="read"
            android:text="Button"
            android:textStyle="bold" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>


</LinearLayout>